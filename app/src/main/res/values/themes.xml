<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/selMenu</item>
        <item name="colorPrimaryVariant">@color/Shtorka</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:spinnerStyle">@style/CustomSpinnerStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:textColor">#00FF00</item> <!-- Цвет текста (красный) -->
        <item name="android:popupBackground">#00FFFF</item> <!-- Фон выпадающего списка -->
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:dialogCornerRadius">100dp</item>
        <item name="android:windowMinWidthMajor">90%</item> <!-- Регулирует ширину (по желанию) -->
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


    <style name="Theme.Bar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>